{
  "name": "dpl",
  "version": "3.8.0",
  "description": "deploy your lambda function to AWS the quick and easy way.",
  "main": "lib/index.js",
  "bin": "dpl.js",
  "scripts": {
    "nocov": "node_modules/.bin/mocha test/*.test.js",
    "test": "nyc node_modules/.bin/_mocha -- -R spec",
    "deploy": "node dpl.js",
    "check-coverage": "npm test && nyc check-coverage --statements 100 --functions 100 --lines 100 --branches 100",
    "eslint": "semistandard  --verbose | snazzy"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "lib/index.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": true,
    "report-dir": "./coverage"
  },
  "files_to_deploy": [
    "package.json",
    "lib/",
    ".env"
  ],
  "lambda_memory": 512,
  "lambda_timeout": 42,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwyl/aws-lambda-deploy.git"
  },
  "keywords": [
    "AWS",
    "Amazon",
    "Lambda",
    "deploy",
    "deployment",
    "function"
  ],
  "author": "@nelsonic & Friends :-)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dwyl/aws-lambda-deploy/issues"
  },
  "homepage": "https://github.com/dwyl/aws-lambda-deploy#readme",
  "devDependencies": {
    "aguid": "^2.0.0",
    "aws-lambda-test-utils": "^1.3.0",
    "decache": "^4.5.1",
    "eslint": "^6.8.0",
    "git-rev": "^0.2.1",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "aws-sdk": "^2.614.0",
    "env2": "^2.1.1"
  },
  "semistandard": {
    "rules": {
      "no-multi-spaces": [
        2,
        {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ],
      "brace-style": [
        2,
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "no-trailing-spaces": 0
    },
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "afterEach"
    ]
  },
  "pre-commit": [
    "check-coverage"
  ]
}
